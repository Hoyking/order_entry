<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">

    <persistence-unit name="catalog-unit" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>com.netcracker.parfenenko.entities.Offer</class>
        <class>com.netcracker.parfenenko.entities.Category</class>
        <class>com.netcracker.parfenenko.entities.Price</class>
        <class>com.netcracker.parfenenko.entities.Tag</class>

        <properties>
            <property name="hibernate.connection.driver_class" value="org.postgresql.Driver"/>
            <property name="hibernate.connection.url" value="jdbc:postgresql://localhost:5432/catalog"/>
            <property name="hibernate.connection.username" value="postgres"/>
            <property name="hibernate.connection.password" value="12344321"/>
            <property name="hibernate.hbm2ddl.auto" value="drop-and-create"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgresPlusDialect"/>
        </properties>
    </persistence-unit>

</persistence>
